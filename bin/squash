#!/usr/bin/env ruby

template_dir = File.expand_path(File.dirname(__FILE__)) + "/../template"

if ARGV.size != 1
  puts "Create a new empty application with: squash <application_name>"
  exit
end

app = ARGV[0]
require 'fileutils'
FileUtils.mkdir app
FileUtils.cp_r "#{template_dir}/.", app
puts "Created Squash application: #{app}"
